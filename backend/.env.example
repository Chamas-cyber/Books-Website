# Example backend environment variables
# Copy this file to .env and replace values for your environment

# MongoDB connection string (Atlas or local)
MONGO_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/<dbname>?retryWrites=true&w=majority

# JWT secret used to sign auth tokens
JWT_SECRET=your_jwt_secret_here

# Backend port (optional, default is 5000)
PORT=5000
